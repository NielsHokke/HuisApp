<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
        android:title="Notifications"
        android:key="pref_key_storage_settings">
        <ListPreference
            android:key="pref_notification_type"
            android:title="Notify me"
            android:dialogTitle="Notify me"
            android:summary="%s"
            android:entries="@array/notify_me_options"
            android:entryValues="@array/notify_me_values"
            android:defaultValue="1" />
        <CheckBoxPreference
            android:key="pref_vibrate"
            android:title="Vibrate"
            android:defaultValue="true"/>
        <CheckBoxPreference
            android:key="pref_sound"
            android:title="Sound"
            android:defaultValue="true"/>
    </PreferenceCategory>
    <PreferenceCategory
        android:title="About app"
        android:key="pref_about_app">
        <PreferenceScreen
            android:title="Developer"
            android:key="pref_developer"
            android:summary="Niels Hokke">
        </PreferenceScreen>
        <PreferenceScreen
            android:title="Version"
            android:key="pref_version"
            android:summary="1.0.0">
        </PreferenceScreen>
    </PreferenceCategory>
</PreferenceScreen>